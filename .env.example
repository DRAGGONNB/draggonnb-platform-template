# DraggonnB CRMM Environment Variables
# Copy to .env.local and fill in your values

# ─── Supabase ───────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://psqfgzbjbgqrmjskdavs.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ─── App URL ────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ─── N8N Automation ─────────────────────────────────────
# VPS-hosted N8N instance
N8N_BASE_URL=https://n8n.srv1114684.hstgr.cloud
# Webhook paths (must match deployed workflow webhook paths)
N8N_WEBHOOK_CONTENT_GENERATOR=/webhook/draggonnb-generate-content
N8N_WEBHOOK_ANALYTICS=/webhook/analytics

# ─── PayFast Payments ───────────────────────────────────
PAYFAST_MERCHANT_ID=your-merchant-id
PAYFAST_MERCHANT_KEY=your-merchant-key
PAYFAST_PASSPHRASE=your-passphrase
PAYFAST_MODE=sandbox
# Optional overrides (defaults to NEXT_PUBLIC_APP_URL + path)
# PAYFAST_RETURN_URL=https://yourdomain.com/payment/success
# PAYFAST_CANCEL_URL=https://yourdomain.com/pricing
# PAYFAST_NOTIFY_URL=https://yourdomain.com/api/webhooks/payfast

# ─── Email (Resend) ────────────────────────────────────
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_TRACKING_SECRET=your-hmac-secret-for-email-tracking

# ─── Social Media OAuth ────────────────────────────────
# Facebook/Instagram
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ─── Anthropic AI (used by N8N, not directly) ──────────
# Configure in N8N UI, not here
# ANTHROPIC_API_KEY=your-anthropic-key
